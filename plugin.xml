<plugin name='ajaxflow' version='0.1.6' grailsVersion='1.3.5 &gt; *'>
  <author>Jeroen Wesbeek</author>
  <authorEmail>work@osx.eu</authorEmail>
  <title>This plugin enables Ajaxified Webflows</title>
  <description>\
This plugin enables Ajaxified Webflows and can create a new default ajaxflow on the fly
</description>
  <documentation>http://grails.org/plugin/ajax-flow</documentation>
  <resources>
    <resource>BuildConfig</resource>
    <resource>Config</resource>
    <resource>DataSource</resource>
    <resource>UrlMappings</resource>
    <resource>nl.grails.plugins.ajaxflow.AjaxflowTagLib</resource>
  </resources>
  <dependencies>
    <plugin name='webflow' version='1.3 &gt; *' />
    <plugin name='jquery' version='1.4 &gt; *' />
  </dependencies>
  <behavior />
</plugin>